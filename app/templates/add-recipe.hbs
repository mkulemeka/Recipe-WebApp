<div class="form-container form">
    <div>
        <div class="hamburger">
            <img src="/assets/images/undraw_Hamburger.png" alt="">
        </div>
        <form id='input'>
            <div class="form-group">
                {{input class='form-control' type="text" value=title placeholder="Type in a recipe name"}}
            </div>
            <div class="form-group">
                {{textarea  class='form-control' value=description placeholder="Description"}}
            </div>
            <div class="form-group">
                {{input class='form-control' type="text" value=image placeholder="Image URL"}}
            </div>
            <div class="form-group">
                {{textarea class='form-control' value=steps placeholder="Steps to take"}}
            </div>
            <button class="btn" type="submit" {{action 'addRecipe'}}>
                Submit
            </button>
         </form>
    </div>
</div>

